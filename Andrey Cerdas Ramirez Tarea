package tarea.datos;

public class Camion {
    public int placa;
    public String color;
    public int altura;
    public int velocidad_maxima;
    public String marca;
    
    public Camion(){
        
    }
    public void esVeloz(){
        if(velocidad_maxima>80){
            System.out.println("camion es apto");
        }else{
            System.out.println("camion no es apto");
        }
    }
    public void placaCorrecta(){
        if(placa<99999999){
            System.out.println("Placa esta correcta");
        }else{
            System.out.println("Placa esta Incorrecta");
        }
    }
    public void tamaÃ±oIndicado(int indicada){
        if(altura<=indicada){
            System.out.println("La altura es la indicada");
        }else{
            System.out.println("La altura no es la indicada");
        }
    }
    public void colorPreferido(String colorPreferido){
        if(color==colorPreferido){
            System.out.println("Es del color preferido del cliente");
        }else{
            System.out.println("No es del color preferido del cliente");
        }
    }
    public void marcaRequerida(String marcaPreferida){
        if(marca==marcaPreferida){
            System.out.println("Es la marca requerida");
        }else{
            System.out.println("No es la marca requerida");
        }
    }

    public String getMarca() {
        return marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public int getPlaca() {
        return placa;
    }

    public void setPlaca(int placa) {
        this.placa = placa;
    }

    public String getColor() {
        return color;
    }

    public void setColor(String color) {
        this.color = color;
    }

    public int getAltura() {
        return altura;
    }

    public void setAltura(int altura) {
        this.altura = altura;
    }

    public int getVelocidad_maxima() {
        return velocidad_maxima;
    }

    public void setVelocidad_maxima(int velocidad_maxima) {
        this.velocidad_maxima = velocidad_maxima;
    }

    public Camion(int placa, String color, int altura, int velocidad_maxima, String marca) {
        this.placa = placa;
        this.color = color;
        this.altura = altura;
        this.velocidad_maxima = velocidad_maxima;
        this.marca = marca;
    }
}
